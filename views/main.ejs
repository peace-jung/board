<h3>게시판</h3>
<hr/>

<ul class="list-group">
  <% if(answer.length == 0) { %>
    <div class="row">
      <div class="col-md-10">
        <p>등록된 글이 없습니다.</p>
      </div>
    </div>
    <hr/>
    <% } else {
      for(var i in answer) { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="/answer?qnumber=<%=answer[i]._id%>" class="list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">
              <%= answer[i].title %>
            </h5>
            <small>
                    <%= answer[i].name %>
                  </small>
          </div>
        </a>
      </li>
      <% }} %>
</ul>
<hr/>
